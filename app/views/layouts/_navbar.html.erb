<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Keevahh", root_path, class: "navbar-brand" %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><%= link_to "Lend", browse_path %></li>
        <% if !@current_cart.cart_items.empty? %>
        <li role="presentation"><a href="/cart">Basket: <span class="badge"><%= @current_cart.cart_items.count %></span></a></li>
        <% else %>
            <li role="presentation" data-toggle="tooltip" data-placement="bottom" title="You don't have any bookings yet."><a href="/cart">Basket: <span class="badge">0</span></a></li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li>
        <% if current_user %>
          <%= link_to "Log out", logout_path, method: :delete%>
        <% else %>
          <li class="active"><a href="#" data-toggle="modal" data-target="#loginModal"> Login <span class="sr-only">(current)</span></a></li>
        <% end %>
       </li>
        <% unless current_user %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"> Sign Up <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li role="active"><a href="#" data-toggle="modal" data-target="#lenderSignUpModal"> Sign Up As Lender </a></li>
              <li role="active"><a href="#" data-toggle="modal" data-target="#borrowerSignUpModal"> Sign Up As Borrower </a></li>
            </ul>
          </li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
