<!-- Page Content -->
<div class="container">

  <!-- Portfolio Item Heading -->
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header pull-left"><%= @loan_request.title %>
      <small><%= @loan_request.owner %></small>
      </h1>
    </div>
  </div>
  <!-- /.row -->

  <!-- Portfolio Item Row -->
  <div class="row">

    <div class="col-md-8">
      <img class="img-responsive" src="http://www.kiva.org/img/w632/1847429.jpg" alt="">
    </div>

    <div class="col-md-4">
      <h3>Loan Overview</h3>
      <p><%= @loan_request.description %></p>
      <h3>Loan Details</h3>
      <ul>
        <li>Requested by <%= @loan_request.requested_by %></li>
        <li>Begins Repayment on <%= @loan_request.repayment_begin %></li>
        <li>Repayment rate: <%= @loan_request.repayment_rate.capitalize %></li>
        <li>Category: <% @loan_request.categories.each do |cat| %>
          <%= cat.title.capitalize %>
        <% end %>
        </li>
        <li>Loan Amount: <%= number_to_currency(@loan_request.amount) %></li>
        <li>Loan Contribution: <%= number_to_currency(@loan_request.contributed) %></li>
      </ul>
      <br>
      <button type="button" class="btn btn-success col-md-4">Lend</button>
    </div>

  </div>
  <!-- /.row -->

  <!-- Related Projects Row -->
  <div class="row">

    <div class="col-lg-12">
      <h3 class="page-header">Related Projects</h3>
    </div>

    <% 4.times do %>
      <div class="col-sm-3 col-xs-6">
      <a href="#">
        <img class="img-responsive portfolio-item" src="http://www.kiva.org/img/w632/1847429.jpg" alt="">
      </a>
    </div>
  <% end %>

  </div>
  <!-- /.row -->

  <hr>

</div>
<!-- /.container -->
